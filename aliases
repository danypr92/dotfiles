## LXC
alias lxc-ls="sudo lxc-ls -f"
alias lxc-start="sudo systemctl start lxc@"
alias lxc-stop="sudo systemctl stop lxc@"


# Efficiently
alias screens="xrandr --output eDP-1 --auto --output VGA-1 --auto --left-of eDP-1"
alias update="sudo apt update"
alias list="sudo apt list --upgradable"
alias upgrade="sudo apt upgrade"
alias sstatus="sudo systemctl status"
alias srestart="sudo systemctl restart"
alias sstart="sudo systemctl start"
alias nv="nvim"
